{
    "manifest_version": 3,
    "name": "Калькулятор систем счисления",
    "version": "1.0",
    "description": "Калькулятор для перевода чисел между системами счисления от 2 до 16.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": ["storage"],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
